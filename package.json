{
  "name": "DIMFLIX",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:check": "npm run build && npm run verify:dist",
    "verify:dist": "sh -c 'if grep -R -n --include=\"*.js\" -E \"\\?\\.([A-Za-z_$\\[]|\\()|\\?\\?=|\\?\\?\" dist/js; then echo \"ERROR: Found modern operators in dist\"; exit 1; else echo \"OK: No ?. ?? ??= in dist\"; fi'",
    "browserslist:update": "npx update-browserslist-db@latest --update",
    "postinstall": "patch-package",
    "lint": "vue-cli-service lint",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "@primevue/themes": "^4.2.4",
    "core-js": "^3.8.3",
    "dompurify": "^3.2.3",
    "gh-pages": "^6.1.1",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "primevue": "^4.2.4",
    "vue": "^3.2.13",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.0.3",
    "vue3-carousel": "^0.8.1",
    "vue3-marquee-slider": "^1.0.5",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/webpack-env": "^1.18.6",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "patch-package": "^8.0.0",
    "prerender-spa-plugin": "^3.4.0",
    "prettier": "^2.4.1",
    "raw-loader": "^4.0.2",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "typescript": "~4.5.5",
    "webpack": "^5.97.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "Chrome >= 78",
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
